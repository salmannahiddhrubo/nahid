<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >

    <fragment
    android:id="@+id/fragmentmap"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true" />

    <ImageButton
    android:id="@+id/atmimgbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:src="@drawable/ic_local_atm_black_24dp" />

    <ImageButton
    android:id="@+id/restimgbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/atmimgbtn"
    android:layout_alignParentRight="true"
    android:layout_marginTop="0dp"
    android:src="@drawable/ic_restaurant_black_24dp" />
    <ImageButton
    android:id="@+id/hospitalimgbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/restimgbtn"
    android:layout_alignParentRight="true"
    android:src="@drawable/ic_local_hospital_black_24dp"
        />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_person_pin_circle_black_24dp" />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/latlngtv"
    android:background="#000"
    android:textColor="#fff"/>

    </RelativeLayout>


